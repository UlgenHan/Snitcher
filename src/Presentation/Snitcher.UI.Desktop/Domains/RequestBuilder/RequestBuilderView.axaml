<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Snitcher.UI.Desktop.Domains.RequestBuilder"
        xmlns:models="using:Snitcher.UI.Desktop.Models"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
        x:Class="Snitcher.UI.Desktop.Domains.RequestBuilder.RequestBuilderView"
        x:DataType="vm:RequestBuilderViewModel">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Request Header -->
        <Border Grid.Row="0"
                Background="#2D3748"
                Padding="12"
                CornerRadius="8"
                Margin="12">
            <Grid ColumnDefinitions="Auto,*,Auto,Auto" RowDefinitions="Auto">
                <ComboBox Grid.Column="0"
                          Width="120"
                          SelectedItem="{Binding CurrentRequest.Method}"
                          ItemsSource="{x:Static vm:RequestBuilderViewModel.HttpMethods}"/>

                <TextBox Grid.Column="1"
                         Margin="8,0"
                         Text="{Binding CurrentRequest.Url}"
                         Watermark="Enter request URL..."/>

                <Button Grid.Column="2"
                        Margin="0,0,8,0"
                        Content="Send"
                        Command="{Binding SendRequestCommand}"
                        IsEnabled="{Binding !IsLoading}"/>

                <ProgressBar Grid.Column="3"
                             Width="16"
                             Height="16"
                             IsIndeterminate="True"
                             IsVisible="{Binding IsLoading}"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" ColumnDefinitions="*,*" Margin="12,0,12,12">
            <!-- Request Panel -->
            <Border Grid.Column="0" Background="#1A202C" Padding="12" CornerRadius="8" Margin="0,0,6,0">
                <TabControl SelectedIndex="{Binding SelectedTabIndex}">
                    <TabItem Header="Params">
                        <Grid RowDefinitions="Auto,*">
                            <Button Grid.Row="0" 
                                    Content="Add Parameter" 
                                    Command="{Binding AddParameterCommand}"
                                    Margin="0,0,0,8"/>
                            <ListBox Grid.Row="1" ItemsSource="{Binding CurrentRequest.Parameters}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate DataType="models:HttpParameter">
                                        <Grid ColumnDefinitions="*,*,Auto,Auto" Margin="0,2">
                                            <CheckBox Grid.Column="0" 
                                                      IsChecked="{Binding Enabled}" 
                                                      VerticalAlignment="Center"/>
                                            <TextBox Grid.Column="1" 
                                                     Text="{Binding Key}" 
                                                     Watermark="Key"
                                                     Margin="4,0"/>
                                            <TextBox Grid.Column="2" 
                                                     Text="{Binding Value}" 
                                                     Watermark="Value"
                                                     Margin="4,0"/>
                                            <Button Grid.Column="3" 
                                                    Content="×" 
                                                    Click="RemoveParameter_Click"
                                                    Tag="{Binding}"
                                                    Width="24" Height="24"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </TabItem>

                    <TabItem Header="Headers">
                        <Grid RowDefinitions="Auto,*">
                            <Button Grid.Row="0" 
                                    Content="Add Header" 
                                    Command="{Binding AddHeaderCommand}"
                                    Margin="0,0,0,8"/>
                            <ListBox Grid.Row="1" ItemsSource="{Binding CurrentRequest.Headers}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate DataType="models:HttpHeader">
                                        <Grid ColumnDefinitions="*,*,Auto,Auto" Margin="0,2">
                                            <CheckBox Grid.Column="0" 
                                                      IsChecked="{Binding Enabled}" 
                                                      VerticalAlignment="Center"/>
                                            <TextBox Grid.Column="1" 
                                                     Text="{Binding Key}" 
                                                     Watermark="Header"
                                                     Margin="4,0"/>
                                            <TextBox Grid.Column="2" 
                                                     Text="{Binding Value}" 
                                                     Watermark="Value"
                                                     Margin="4,0"/>
                                            <Button Grid.Column="3" 
                                                    Content="×" 
                                                    Click="RemoveHeader_Click"
                                                    Tag="{Binding}"
                                                    Width="24" Height="24"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </TabItem>

                    <TabItem Header="Body">
                        <Grid RowDefinitions="Auto,*" Margin="8">
                            <ComboBox Grid.Row="0"
                                      SelectedItem="{Binding SelectedBodyType}"
                                      Margin="0,0,0,8">
                                <x:String>None</x:String>
                                <x:String>Form</x:String>
                                <x:String>XForm</x:String>
                                <x:String>Raw</x:String>
                                <x:String>Binary</x:String>
                                <x:String>GraphQL</x:String>
                            </ComboBox>
                            
                            <TextBox Grid.Row="1" 
                                     Text="{Binding CurrentRequest.Body}"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalAlignment="Stretch"
                                     FontFamily="Consolas"
                                     FontSize="12"
                                     Watermark="Enter request body..."/>
                        </Grid>
                    </TabItem>

                    <TabItem Header="Auth">
                        <Grid RowDefinitions="Auto,*" Margin="8">
                            <ComboBox Grid.Row="0"
                                      SelectedItem="{Binding SelectedAuthenticationType}"
                                      Margin="0,0,0,8">
                                <x:String>None</x:String>
                                <x:String>Basic</x:String>
                                <x:String>Bearer</x:String>
                                <x:String>ApiKey</x:String>
                                <x:String>OAuth2</x:String>
                            </ComboBox>
                            
                            <ScrollViewer Grid.Row="1">
                                <StackPanel Spacing="8">
                                    <!-- Basic Auth -->
                                    <StackPanel Spacing="8">
                                        <TextBox Text="{Binding CurrentRequest.Authentication.Username}" 
                                                 Watermark="Username"/>
                                        <TextBox Text="{Binding CurrentRequest.Authentication.Password}" 
                                                 Watermark="Password"
                                                 PasswordChar="*"/>
                                    </StackPanel>
                                    
                                    <!-- Bearer Token -->
                                    <StackPanel>
                                        <TextBox Text="{Binding CurrentRequest.Authentication.BearerToken}" 
                                                 Watermark="Bearer Token"
                                                 AcceptsReturn="True"
                                                 TextWrapping="Wrap"/>
                                    </StackPanel>
                                    
                                    <!-- API Key -->
                                    <StackPanel Spacing="8">
                                        <TextBox Text="{Binding CurrentRequest.Authentication.ApiKey}" 
                                                 Watermark="API Key"/>
                                        <TextBox Text="{Binding CurrentRequest.Authentication.ApiValue}" 
                                                 Watermark="API Value"/>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </TabItem>

                    <TabItem Header="Tests">
                        <Grid RowDefinitions="Auto,*">
                            <Button Grid.Row="0" 
                                    Content="Add Test" 
                                    Command="{Binding AddTestCommand}"
                                    Margin="0,0,0,8"/>
                            <ListBox Grid.Row="1" ItemsSource="{Binding CurrentRequest.Tests}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate DataType="models:HttpTest">
                                        <Grid ColumnDefinitions="*,Auto" Margin="0,2">
                                            <TextBox Grid.Column="0" 
                                                     Text="{Binding Script}" 
                                                     AcceptsReturn="True"
                                                     TextWrapping="Wrap"
                                                     MinHeight="60"
                                                     FontFamily="Consolas"
                                                     FontSize="12"/>
                                            <Button Grid.Column="1" 
                                                    Content="×" 
                                                    Click="RemoveTest_Click"
                                                    Tag="{Binding}"
                                                    Width="24" Height="24"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Border>

            <!-- Response Panel -->
            <Border Grid.Column="1" Background="#1A202C" Padding="12" CornerRadius="8" Margin="6,0,0,0">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Response Header -->
                    <Grid Grid.Row="0" RowDefinitions="Auto,Auto,Auto" Margin="0,0,0,12">
                        <TextBlock Grid.Row="0" 
                                   Text="Response" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                        
                        <Grid Grid.Row="1" ColumnDefinitions="Auto,*,Auto" Margin="0,4">
                            <TextBlock Grid.Column="0" 
                                       Text="{Binding CurrentResponse.StatusCode}" 
                                       FontSize="14" 
                                       FontWeight="Bold"
                                       Foreground="Lime"/>
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding CurrentResponse.StatusText}" 
                                       FontSize="12" 
                                       Foreground="#B3B3B3"
                                       Margin="8,0"/>
                            <TextBlock Grid.Column="2" 
                                       Text="{Binding CurrentResponse.GetResponseTimeDisplay}" 
                                       FontSize="12" 
                                       Foreground="#888888"/>
                        </Grid>
                        
                        <TextBlock Grid.Row="2" 
                                   Text="{Binding StatusMessage}" 
                                   FontSize="12" 
                                   Foreground="#888888"/>
                    </Grid>

                    <!-- Response Body -->
                    <TabControl Grid.Row="1">
                        <TabItem Header="Body">
                            <ScrollViewer>
                                <TextBlock Text="{Binding CurrentResponse.Body}" 
                                           FontFamily="Consolas"
                                           FontSize="12"
                                           Foreground="White"
                                           TextWrapping="Wrap"/>
                            </ScrollViewer>
                        </TabItem>
                        
                        <TabItem Header="Headers">
                            <ListBox ItemsSource="{Binding CurrentResponse.Headers}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate DataType="models:HttpHeader">
                                        <Grid ColumnDefinitions="*,*" Margin="0,2">
                                            <TextBlock Grid.Column="0" 
                                                       Text="{Binding Key}" 
                                                       FontWeight="Bold"
                                                       Foreground="White"/>
                                            <TextBlock Grid.Column="1" 
                                                       Text="{Binding Value}" 
                                                       Foreground="#B3B3B3"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </TabItem>
                        
                        <TabItem Header="Preview">
                            <TextBlock Text="HTML/XML Preview would go here" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </TabItem>
                    </TabControl>

                    <!-- Response Footer -->
                    <TextBlock Grid.Row="2" 
                               Text="{Binding CurrentResponse.GetSizeDisplay}" 
                               FontSize="12" 
                               Foreground="#888888"
                               Margin="0,8,0,0"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2"
                Background="#2D3748"
                Padding="12,8"
                CornerRadius="8"
                Margin="12">
            <Grid ColumnDefinitions="*,Auto,Auto,Auto">
                <TextBlock Grid.Column="0" 
                           Text="{Binding StatusMessage}" 
                           Foreground="White"/>
                
                <Button Grid.Column="1" 
                        Content="Save" 
                        Command="{Binding SaveRequestCommand}"
                        Margin="0,0,8,0"/>
                
                <Button Grid.Column="2" 
                        Content="New" 
                        Command="{Binding NewRequestCommand}"
                        Margin="0,0,8,0"/>
                
                <Button Grid.Column="3" 
                        Content="Duplicate" 
                        Command="{Binding DuplicateRequestCommand}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
